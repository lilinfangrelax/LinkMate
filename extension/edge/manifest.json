{
    "manifest_version": 3,
    "name": "LinkMate Core (Edge)",
    "version": "1.0",
    "description": "Syncs browser tabs with LinkMate desktop app via Native Messaging.",
    "permissions": [
        "tabs",
        "tabGroups",
        "nativeMessaging",
        "identity",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "LinkMate",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}