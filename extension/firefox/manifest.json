{
    "manifest_version": 2,
    "name": "LinkMate Core (Firefox)",
    "version": "1.0",
    "description": "Syncs browser tabs with LinkMate desktop app via Native Messaging.",
    "permissions": [
        "tabs",
        "nativeMessaging",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "linkmate@linkmate.com",
            "strict_min_version": "50.0"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}