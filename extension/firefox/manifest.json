{
    "manifest_version": 2,
    "name": "LinkMate Core",
    "version": "1.0",
    "description": "Syncs browser tabs with LinkMate desktop app via Native Messaging.",
    "permissions": [
        "tabs",
        "nativeMessaging",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "LinkMate",
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "linkmate@linkmate.com",
            "strict_min_version": "58.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}